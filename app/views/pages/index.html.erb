<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<div class="container">
  <div class="row">
    <div class="col">Title</div>
    <div class="col">Page Order</div>
    <div class="col">Medical</div>
    <div class="col">Dental</div>
    <div class="col">Action</div>
  </div>
  <% @pages.each do |page| %>
    <div class="row">
      <div class="col"><%= link_to page.title, "/admin/pages/#{page.id}/edit" %></div>
      <div class="col"><%= page.order %></div>
      <div class="col"><%= page.medical %></div>
      <div class="col"><%= page.dental %></div>
      <div class="col">
        <%= link_to 'Show', page %>
        <%= link_to 'Edit', "/admin/pages/#{page.id}/edit" %>

        <%= link_to 'Delete', "/admin/pages/#{page.id}", method: :delete, data: { confirm: 'Are you sure?' } %> </div>
    </div>
  <% end %>


<br>

<%= link_to 'New Page', '/admin/pages/new' %>
